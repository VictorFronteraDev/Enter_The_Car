<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FronteraVictor_EnterTheCar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="colorOnPrimaryContainer">@color/white</item>

    </style>

    <!-- Mi estilo-->
    <!-- Estilo para el botón-->
    <style name="button_style">
        <item name="android:textColor">@color/black</item>


    </style>

    <!--Estilo para que todos los radio button sean iguales y no tener que repetir el código muchas veces-->
    <style name="Radio_Buttons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--Estilo para separar horizontalmente todos aquellos bloques que sean iguales y así no repetir tanto código-->
    <style name="Separacion_Horizontal">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">5</item>

    </style>

    <!--Estilo para separar Verticalmente todos aquellos bloques que sean iguales y así no repetir tanto código-->
    <style name="Separacion_Vertical">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>



</resources>